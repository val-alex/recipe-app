{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@constants": [
        "./src/constants.js"
      ],
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./node_modules"
  ],
}